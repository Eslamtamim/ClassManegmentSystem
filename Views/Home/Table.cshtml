@model IEnumerable<ClassManegmentSystem.Models.Class>
@{
    ViewData["Title"] = "Home Page";
    var TeacherData = Model.Select(e => new { e.teacher.TeacherName, e.teacher.TeacherId , e.teacher.Subject }).Distinct().ToList();
    int count = Model.Select(e=> e.student.StudentName).Count();
}

<div class="text-center">
</div>
<br />
<br />
@foreach (var item in Model)
{
    <div class="d-flex justify-content-between align-content-center text-primary" >

    <h3>Mr/@item.teacher.TeacherName</h3>
    <h3>Subject: @item.teacher.Subject</h3>
        <h3> Count of Students: @count</h3>

    </div>
    
}   

<br />
@if (Model.Any())
{
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.student.StudentName)</th>
                    <th>@Html.DisplayNameFor(model => model.student.city.CityName)</th>
                    <th>@Html.DisplayNameFor(model => model.student.StudentNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.student.StudentPhoneNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.student.StudentParentPhoneNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.student.StudentGrade)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                      
                        <td>@Html.DisplayFor(model => item.student.StudentName)</td>
                        <td>@Html.DisplayFor(model => item.student.city.CityName)</td>
                        <td>@Html.DisplayFor(model => item.student.StudentNumber)</td>
                        <td>@Html.DisplayFor(model => item.student.StudentPhoneNumber)</td>
                        <td>@Html.DisplayFor(model => item.student.StudentParentPhoneNumber)</td>
                        <td>@Html.DisplayFor(model => item.student.StudentGrade)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
@if (!Model.Any())
{
    <div class="alert alert-warning d-flex align-items-lg-center mt-5 col-12" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-circle me-2" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
            <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z" />
        </svg>
        <div>
            Set some filtration to create your table
        </div>
    </div>
}




