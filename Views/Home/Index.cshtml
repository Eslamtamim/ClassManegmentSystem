@model IEnumerable<ClassManegmentSystem.Models.Class>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 text-primary">Welcome </h1>
    <p class="text-primary opacity-50 fw-bold">Here is you place to manege and keep track of you class</p>
</div>
<br/>


<div>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.teacher.TeacherName)</th>
                <th>@Html.DisplayNameFor(model => model.teacher.Subject)</th>
                <th>@Html.DisplayNameFor(model => model.student.StudentNumber)</th>
                <th>@Html.DisplayNameFor(model => model.student.StudentName)</th>
                <th>@Html.DisplayNameFor(model => model.student.city.CityName)</th>
                <th>@Html.DisplayNameFor(model => model.student.StudentGrade)</th>
                <th>@Html.DisplayNameFor(model => model.student.StudentPhoneNumber)</th>
                <th>@Html.DisplayNameFor(model => model.student.StudentParentPhoneNumber)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => item.teacher.TeacherName)</td>
                        <td>@Html.DisplayFor(model => item.teacher.Subject)</td>
                        <td>@Html.DisplayFor(model => item.student.StudentNumber)</td>
                        <td>@Html.DisplayFor(model => item.student.StudentName)</td>
                        <td>@Html.DisplayFor(model => item.student.city.CityName)</td>
                        <td>@Html.DisplayFor(model => item.student.StudentGrade)</td>
                        <td>@Html.DisplayFor(model => item.student.StudentPhoneNumber)</td>
                        <td>@Html.DisplayFor(model => item.student.StudentParentPhoneNumber)</td>
                    </tr>
            }
        </tbody>
    </table>
</div>








